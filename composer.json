{
  "name": "solophp/cache",
  "type": "library",
  "description": "PSR-16 compliant cache library with pluggable adapters",
  "keywords": [
    "cache",
    "psr-16",
    "simple-cache",
    "redis",
    "file-cache",
    "caching",
    "adapter",
    "storage",
    "php"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Vitalii Olos",
      "email": "vedastudio@gmail.com"
    }
  ],
  "require": {
    "php": "^8.1",
    "psr/simple-cache": "^3.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^12.0",
    "phpstan/phpstan": "^2.0",
    "squizlabs/php_codesniffer": "^4.0"
  },
  "suggest": {
    "ext-redis": "Required for Redis cache adapter"
  },
  "autoload": {
    "psr-4": {
      "Solo\\Cache\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Solo\\Cache\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "cs-check": "phpcs --standard=PSR12 src/",
    "cs-fix": "phpcbf --standard=PSR12 src/",
    "analyze": "phpstan analyse src --level=max",
    "check": [
      "@cs-check",
      "@analyze",
      "@test"
    ]
  }
}